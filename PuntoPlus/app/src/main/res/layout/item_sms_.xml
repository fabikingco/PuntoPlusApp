<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RippleStyleBlack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_middle"
            android:src="@drawable/ic_sms_24dp" />

        <View
            android:layout_width="@dimen/spacing_medium"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp">

            <TextView
                android:id="@+id/tvHoraFecha"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="FECHA"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/tvContrapartida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrapartida: 098741992"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_below="@+id/tvHoraFecha"
                android:lines="1"
                android:textSize="15sp"
                android:textColor="@color/red_900" />

            <TextView
                android:id="@+id/tvMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta: People Name \nprueba"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_below="@+id/tvContrapartida"
                android:lines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey_90" />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/black" />


        </RelativeLayout>

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>